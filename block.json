{
	"apiVersion": "1",
	"name": "tcb/tabs",
	"version": "0.1.0",
	"title": "Tabbed Content",
	"category": "widgets",
	"keywords": [
		"tcb",
		"tcb-tabbed-content"
	],
	"icon": "welcome-widgets-menus",
	"description": "Create tabbed sections in WordPress for organized content and improved user engagement.",
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"html": false
	},
	"textdomain": "tcb-tabbed-content",
	"attributes": {
		"align": {
			"type": "string",
			"default": ""
		},
		"cId": {
			"type": "string",
			"default": ""
		},
		"tabs": {
			"type": "array",
			"default": [
				{
					"title": "HTML5 Audio Player",
					"iconClass": "fa-solid fa-play"
				},
				{
					"title": "HTML5 Video Player",
					"iconClass": "fa-solid fa-circle-play"
				},
				{
					"title": "PDF Poster",
					"iconClass": "fa-solid fa-file-pdf"
				}
			]
		},
		"tabColors": {
			"type": "object",
			"default": {
				"color": "#333",
				"bgType": "gradient",
				"gradient": "linear-gradient(to right, #f3fbed, #f1f9eb, #f0f7e9, #e4eedc, #dbeccd)"
			}
		},
		"tabActiveColors": {
			"type": "object",
			"default": {
				"color": "#fff",
				"bgType": "gradient",
				"gradient": "linear-gradient(90deg, #019447 0%, #10d56d 100%)"
			}
		},
		"titleTypo": {
			"type": "object",
			"default": {
				"fontSize": 20
			}
		},
		"titleColor": {
			"type": "string",
			"color": "#000"
		},
		"padding": {
			"type": "object",
			"default": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			}
		},
		"dletBtnColor": {
			"type": "string",
			"default": "red"
		},
		"iconColor": {
			"type": "string",
			"default": "#41FB76B3"
		},
		"iconSize": {
			"type": "string",
			"default": "55px"
		},
		"contentBackgroundColor": {
			"type": "object",
			"default": {
				"gradient": "-webkit-linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(232,243,214,1) 0%, rgba(242,246,203,1) 39%, rgba(242,246,202,1) 70%, rgba(252,249,190,1) 90%)",
				"type": "gradient"
			}
		},
		"backgroundColor": {
			"type": "object",
			"default": {
				"gradient": "-webkit-linear-gradient(left, #f3fbed, #f1f9eb, #f0f7e9, #e4eedc, #dbeccd)",
				"type": "gradient"
			}
		},
		"hoverBackgroundColor": {
			"type": "object",
			"default": {
				"gradient": "linear-gradient(90deg, #019447 0%, #10d56d 100%);",
				"type": "gradient"
			}
		}
	},
	"example": {
		"attributes": {
			"preview": true
		}
	},
	"editorScript": "file:dist/editor.js",
	"script": "file:dist/script.js"
}